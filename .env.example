# Example environment variables for Book-Cart

# MongoDB connection URL. Use a MongoDB Atlas connection string in production.
# Example: mongodb+srv://<user>:<pass>@cluster0.xxxxx.mongodb.net/bookbazzar?retryWrites=true&w=majority
MONGODB_URI=mongodb://127.0.0.1:27017/bookbazzar

# Session secret - use a long, random string in production
SESSION_SECRET=your-very-secret-value

# Node environment
NODE_ENV=development

# Port (optional)
PORT=3000
